<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:background="@drawable/birthday_decorations_and_cupcakes"
        android:backgroundTint="@color/translucent_white"
        android:backgroundTintMode="multiply"
        android:padding="16dp">

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifHourGlass"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:src="@drawable/hour_glass"
            app:layout_constraintBottom_toTopOf="@+id/tvNextCelebration"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentAge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/tvCurrentAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/translucent_white"
            android:textSize="25sp"
            android:textColor="@color/royal_heath"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/gifHourGlass"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/tvNextCelebration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/translucent_white"
            android:textSize="25sp"
            android:textColor="@color/royal_heath"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/gifHourGlass"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>