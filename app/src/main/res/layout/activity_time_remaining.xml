<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/birthday_decorations_and_cupcakes"
        android:backgroundTint="@color/translucent_white"
        android:backgroundTintMode="multiply"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".TimeRemainingActivity">

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifHourGlass"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/hour_glass"
            android:alpha="1"
            android:backgroundTint="@color/blue_chalk_translucent"
            android:backgroundTintMode="screen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tvTimeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/blue_chalk_translucent"
            android:textColor="@color/royal_heath"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/gifHourGlass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/tvPresentAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/blue_chalk_translucent"
            android:textColor="@color/royal_heath"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gifHourGlass" />

</androidx.constraintlayout.widget.ConstraintLayout>